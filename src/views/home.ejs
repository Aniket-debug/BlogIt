<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head") %>
        <title>HomePage</title>

        <style>
            .blog-card {
                height: 100%;
                display: flex;
                flex-direction: column;
            }

            .blog-card-img {
                object-fit: cover;
                height: 180px;
                width: 100%;
            }

            .blog-card-body {
                flex-grow: 1;
                display: flex;
                flex-direction: column;
                justify-content: space-between;
            }

            .card-title {
                font-size: 1.1rem;
                margin-bottom: 0.75rem;
            }
        </style>
</head>

<body>
    <%- include("./partials/nav") %>

        <div class="container mt-4">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
                <% blogs.forEach(blog=> { %>
                    <div class="col">
                        <div class="card blog-card shadow-sm border-0 rounded-4 overflow-hidden bg-light-subtle">
                            <img src="<%= blog.coverImageURL %>"
                                class="card-img-top blog-card-img" alt="Blog image"
                                style="height: 200px; object-fit: cover;">

                            <div class="card-body d-flex flex-column p-4 bg-body-secondary">
                                <h5 class="card-title mb-3 text-dark fw-semibold">
                                    <%= blog.title %>
                                </h5>
                                <a href="/blog/<%= blog._id %>" class="btn btn-outline-secondary w-100 mt-auto">Read
                                    More</a>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>

        <%- include("./partials/scripts") %>
</body>

</html>