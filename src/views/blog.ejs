<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head") %>
        <title>
            <%= blog.title %> | Blog
        </title>
</head>

<body>
    <%- include("./partials/nav") %>

        <div class="container my-5">
            <div class="row justify-content-center">
                <div class="col-lg-10 col-md-12">
                    <div class="card shadow-sm border-0">
                        <img src="<%= blog.coverImageURL %>" class="card-img-top img-fluid" alt="Blog Cover Image">

                        <div class="card-body">
                            <h1 class="card-title mb-3">
                                <%= blog.title %>
                            </h1>
                            <p class="text-muted">
                                Posted by <strong>
                                    <%= blog.createdBy?.fullname || 'Anonymous' %>
                                </strong>
                                on <%= new Date(blog.createdAt).toLocaleDateString() %>
                            </p>

                            <hr>

                            <div class="card-text" style="white-space: pre-wrap;">
                                <%= blog.content %>
                            </div>
                            <hr class="mt-5">
                            <h4 class="mb-3">Comments (<%= blog.comments.length %>)</h4>

                            <!-- Comments List -->
                            <% if (blog.comments && blog.comments.length> 0) { %>
                                <div class="list-group mb-4">
                                    <% blog.comments.forEach(comment=> { %>
                                        <div class="list-group-item py-2 px-3">
                                            <p class="mb-1 small text-body" style="white-space: pre-wrap;">
                                                <%= comment.text %>
                                            </p>
                                            <small class="text-muted d-block text-end">
                                                â€” <%= comment.createdBy?.fullname || 'Anonymous' %>,
                                                    <%= new Date(comment.createdAt).toLocaleDateString() %>
                                            </small>
                                        </div>
                                        <% }) %>
                                </div>

                                <% } else { %>
                                    <p class="text-muted">No comments yet. Be the first to comment!</p>
                                    <% } %>

                                        <!-- Comment Form -->
                                        <% if (locals.user) { %>
                                            <form action="/blog/<%= blog._id %>/comments" method="POST" class="mt-4">
                                                <div class="mb-3">
                                                    <label for="commentText" class="form-label">Leave a Comment</label>
                                                    <textarea name="text" id="commentText" class="form-control" rows="3"
                                                        required></textarea>
                                                </div>
                                                <button type="submit" class="btn btn-primary">Post Comment</button>
                                            </form>
                                            <% } else { %>
                                                <p class="text-muted mt-3">Please <a href="/signin">signin</a> to post a
                                                    comment.</p>
                                                <% } %>

                        </div>
                    </div>

                    <% if (user && user._id.toString()===blog.author?._id?.toString()) { %>
                        <div class="mt-4 d-flex justify-content-end gap-2">
                            <a href="/blogs/<%= blog._id %>/edit" class="btn btn-outline-primary">Edit</a>
                            <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                                <button type="submit" class="btn btn-outline-danger">Delete</button>
                            </form>
                        </div>
                        <% } %>
                </div>
            </div>
        </div>

        <%- include("./partials/scripts") %>
</body>

</html>